{
	"if": {
		"allOf": [
			{
				"field": "type",
				"equals": "Microsoft.Sql/managedInstances/databases"
			},
			{
				"field": "location",
				"like": "[parameters('region')]"
			}
		]
	},
	"then": {
		"effect": "deployIfNotExists",
		"details": {
			"type": "Microsoft.Insights/diagnosticSettings",
			"name": "setByPolicy-storageAccount",
			"existenceCondition": {
				"allOf": [
					{
						"field": "Microsoft.Insights/diagnosticSettings/logs.enabled",
						"equals": "True"
					},
					{
						"field": "Microsoft.Insights/diagnosticSettings/metrics.enabled",
						"equals": "True"
					},
              		{
                		"field": "Microsoft.Insights/diagnosticSettings/storageAccountId",
                		"equals": "[parameters('storageAccountId')]"
              		}
				]
			},
			"roleDefinitionIds": [
				"/providers/microsoft.authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
			],
			"deployment": {
				"properties": {
					"mode": "incremental",
					"template": {
						"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
						"contentVersion": "1.0.0.0",
						"parameters": {
							"resourceName": {
								"type": "string"
							},
							"region": {
								"type": "string"
							},
							"storageAccountId": {
								"type": "string"
							}
						},
						"resources": [
							{
								"type": "Microsoft.Sql/managedInstances/databases/providers/diagnosticSettings",
								"apiVersion": "2017-05-01-preview",
								"name": "[concat(parameters('resourceName'), '/', 'Microsoft.Insights/setByPolicy-storageAccount')]",
								"location": "[parameters('region')]",
								"dependsOn": [],
								"properties": {
									"storageAccountId": "[parameters('storageAccountId')]",
									"logs": [
										{
											"category": "SQLInsights",
											"enabled": "True"
                                        },
                                        {
											"category": "QueryStoreRuntimeStatistics",
											"enabled": "True"
                                        },
                                        {
											"category": "QueryStoreWaitStatistics",
											"enabled": "True"
                                        },
                                        {
											"category": "Errors",
											"enabled": "True"
										}
									]
								}
							}
						]
					},
					"parameters": {
						"region": {
							"value": "[parameters('region')]"
						},
						"resourceName": {
							"value": "[field('name')]"
						},
						"storageAccountId": {
							"value": "[parameters('storageAccountId')]"
						}
					}
				}
			}
		}
	}
}
