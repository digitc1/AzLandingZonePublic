{
	"if": {
		"allOf": [
			{
				"field": "type",
				"equals": "Microsoft.Devices/IotHubs"
			},
			{
				"field": "location",
				"like": "[parameters('region')]"
			}
		]
	},
	"then": {
		"effect": "deployIfNotExists",
		"details": {
			"type": "Microsoft.Insights/diagnosticSettings",
			"name": "setByPolicy-eventHub",
			"existenceCondition": {
				"allOf": [
					{
						"field": "Microsoft.Insights/diagnosticSettings/logs.enabled",
						"equals": "True"
					},
					{
						"field": "Microsoft.Insights/diagnosticSettings/metrics.enabled",
						"equals": "True"
					},
					{
						"field": "Microsoft.Insights/diagnosticSettings/eventHubAuthorizationRuleId",
						"equals": "[parameters('eventHubRuleId')]"
					}
				]
			},
			"roleDefinitionIds": [
				"/providers/microsoft.authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
			],
			"deployment": {
				"properties": {
					"mode": "incremental",
					"template": {
						"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
						"contentVersion": "1.0.0.0",
						"parameters": {
							"resourceName": {
								"type": "string"
							},
							"region": {
								"type": "string"
							},
							"eventHubRuleId": {
								"type": "string"
                            },
                            "eventHubName": {
                                "type": "string"
                            }
						},
						"resources": [
							{
								"type": "Microsoft.Devices/IotHubs/providers/diagnosticSettings",
								"apiVersion": "2017-05-01-preview",
								"name": "[concat(parameters('resourceName'), '/Microsoft.Insights/setByPolicy-eventHub')]",
								"location": "[parameters('region')]",
								"dependsOn": [],
								"properties": {
                                    "eventHubAuthorizationRuleId": "[parameters('eventHubRuleId')]",
                                    "eventHubName": "[parameters('eventHubName')]",
									"metrics": [
										{
											"category": "AllMetrics",
											"enabled": "True",
											"retentionPolicy": {
												"enabled": false,
												"days": 0
											}
										}
									],
									"logs": [
										{
											"category": "Connections",
											"enabled": "True"
                                        },
                                        {
											"category": "DeviceTelemetry",
											"enabled": "True"
                                        },
                                        {
											"category": "C2DCommands",
											"enabled": "True"
                                        },
                                        {
											"category": "DeviceIdentityOperations",
											"enabled": "True"
                                        },
                                        {
											"category": "FileUploadOperations",
											"enabled": "True"
                                        },
                                        {
											"category": "Routes",
											"enabled": "True"
                                        },
                                        {
											"category": "D2CTwinOperations",
											"enabled": "True"
                                        },
                                        {
											"category": "C2DTwinOperations",
											"enabled": "True"
                                        },
                                        {
											"category": "TwinQueries",
											"enabled": "True"
                                        },
                                        {
											"category": "JobsOperations",
											"enabled": "True"
                                        },
                                        {
											"category": "DirectMethods",
											"enabled": "True"
                                        },
										{
											"category": "DistributedTracing",
											"enabled": "True"
                                        },
                                        {
											"category": "Configurations",
											"enabled": "True"
                                        },
                                        {
											"category": "DeviceStreams",
											"enabled": "True"
                                        }
									]
								}
							}
						]
					},
					"parameters": {
						"region": {
							"value": "[parameters('region')]"
						},
						"resourceName": {
							"value": "[field('name')]"
						},
						"eventHubRuleId": {
                            "value": "[parameters('eventHubRuleId')]"
                        },
                        "eventHubName": {
                            "value": "[parameters('eventHubName')]"
                        }
					}
				}
			}
		}
	}
}
